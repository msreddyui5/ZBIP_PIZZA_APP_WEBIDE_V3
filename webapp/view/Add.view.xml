			<f:SimpleForm id="anubhavSimple" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="3" columnsM="8"
				columnsXL="5" columnsL="5" emptySpanXL="3" emptySpanL="3" emptySpanM="1">
				<f:content>
					<Label text="Emp Id"></Label>
					<Input></Input>
					<Label text="First and Last Name"></Label>
					<Input>
						<layoutData>
							<l:GridData span="XL2 L2 M2"></l:GridData>
						</layoutData>
					</Input>
					<Input>
						<layoutData>
							<l:GridData span="XL2 L2 M3"></l:GridData>
						</layoutData>
					</Input>
					<Input>
						<layoutData>
							<l:GridData span="XL2 L2 M3"></l:GridData>
						</layoutData>
					</Input>
					<Label text="Salary"></Label>
					<Input></Input>
					<Input></Input>
					<Label text="City"></Label>
					<Input></Input>
				</f:content>
			</f:SimpleForm>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>